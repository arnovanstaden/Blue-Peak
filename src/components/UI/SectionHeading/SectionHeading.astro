---
import classNames from 'classnames';
import styles from './SectionHeading.module.scss';

interface Props {
  heading: string;
  subheading: string;
  centerAlign?: boolean;
  className?: string;
}

const { heading, subheading, centerAlign, className } = Astro.props;

const classes = classNames(
  styles.SectionHeading,
  centerAlign && styles.centerAlign,
  className
);
---

<header class={classes}>
  <h1>{heading}</h1>
  <h2>{subheading}</h2>
</header>
