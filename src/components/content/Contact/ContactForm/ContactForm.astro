---
import Button from '@components/UI/Button/Button.astro';
import styles from './ContactForm.module.scss';
---

<div class={styles.ContactForm}>
  <form action=''>
    <input type='text' name='name' placeholder='Full Name' />
    <input type='email' name='email' placeholder='Email' />
    <input type='tel' name='phone' placeholder='Phone' />
    <input type='text' name='address' placeholder='Address' />
    <textarea placeholder='Message' name='message' rows={4}></textarea>
  </form>
  <Button variant='contained' colour='primary' id='formSubmitButton'>
    Submit
  </Button>
</div>

<script>
  document
    .getElementById('formSubmitButton')!
    .addEventListener('click', () => alert('Form submitted!'));
</script>
