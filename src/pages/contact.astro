---
import Layout from '../components/Layout/Layout.astro';
import ContactSection from '@components/content/Contact/Contact.astro';
import styles from '@styles/pages/ContactPage.module.scss';
import FAQs from '@components/content/FAQs/FAQs.astro';
import Card from '@components/UI/Card/Card.astro';
import Container from '@components/UI/Container/Container.astro';
import SectionHeading from '@components/UI/SectionHeading/SectionHeading.astro';
import EmergencyCard from '@components/content/EmergencyCard/EmergencyCard.astro';
---

<Layout
  className={styles.ContactPage}
  title='Contact | Blue Peak Plumbing & Gas'
>
  <section>
    <Container>
      <SectionHeading
        heading='How can we fix your problem?'
        subheading='So you want to get in touch'
        centerAlign
      />
      <EmergencyCard />
      <Card className={styles.contactCard}>
        <ContactSection />
      </Card>
    </Container>
  </section>
  <FAQs />
</Layout>
